        function initiateImageCrop(imageId) {
            console.log("Initiating image crop for:", imageId);

            var image = document.getElementById(imageId);

            // Initialize Cropper
            var cropper = new Cropper(image, {
                aspectRatio: 1,  // Set the aspect ratio as needed
                // Other Cropper options if required
            });


            // Optionally, handle the crop result
            // You can obtain the cropped data using cropper.getCroppedCanvas()
            // For example: var croppedCanvas = cropper.getCroppedCanvas();
            // Then you can use croppedCanvas.toDataURL() to get the cropped image data URL

            // When you are done, you may want to destroy the Cropper instance
            // cropper.destroy();
        }
    </script>
