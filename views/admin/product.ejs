<%-include('../layouts/adminlayout/header.ejs')%>
<style>
    .table-responsive {
        max-height: 800px; /* Set your desired maximum height */
        overflow-y: auto;
    }

    .oval {
        border-radius: 100%;
        border: 1rem solid #fff;
    }
</style>


    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>product</h4>

                    </div>
                </div>

            </div>
            <!-- row -->

            <div class="row">






                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">product</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table header-border table-responsive-sm">
                                    <thead>
                                        <tr> <th>Image</th>
                                            <th>Name</th>
                                            <th>Price</th>
                                            <th>Category</th>
                                            <th>Material</th>
                                            <th>Offer</th>
                                            <th>Stock Quantity</th>
                                            <th>Status</th>
                                           
                                           
                                            <th>Action</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(product.length>0){
                                            for(let i=0;i<product.length;i++){ %>
                                                <tr>
                                                      <td>
                                                        <div >
                                                         <%   for (let j = 0; j <  product[i].image.length; j++) {%>
                          
                                                            <img class="oval" style="padding-bottom: 5px;" src="/Admins/productImages/<%= product[i].image[j] %>"width="80px" height="80px">

                                                            <%}%>
                                                        </div>
                                                 
                                                        
                                                    </td>

                                                    <td>
                                                        <a href="javascript:void(0)">
                                                            <%=product[i].productname%>
                                                        </a>


                                                    </td>

                                                    <td>





                                                        <% if (product[i].offer) { %>
                                                            <div><del>
                                                                    <%=product[i].mrp%>
                                                                </del></div>
                                                           <div> <%=product[i].price%></div>

                                                                <% } else { %>
                                                                    <%=product[i].price%>
                                                                        <% } %>
                                                    </td>
                                                    <td><span class="text-muted">
                                                            <%=product[i].category%>
                                                        </span>
                                                    </td>
                                                    <td><span class="text-muted">
                                                            <%=product[i].material%>
                                                        </span>
                                                    </td>
                                                    <td><span class="text-muted">
                                                          
                                                            <% if (product[i].offer && product[i].offer.status === true) { %>
                                                                
                                                               
                                                                <%= product[i].offer.discount%>
                                                                <%=  console.log("bhnvgbcf",product[i].offer.discount)%>
                                                               
                                                                    <% } else { %>

                                                                        <p style="margin-top: 16px; color: brown;">No
                                                                            Offer</p>


                                                                        <% }%>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <%=product[i].stockquantity%>
                                                    </td>

                                                    <td>
                                                        <span class="badge badge-success">
                                                            <%=product[i].status%>

                                                        </span>
                                                    </td>

                                                  

                                                    <td><span class="badge badge-success"></span>
                                                        <% if(product[i].status){ %>
                                                            <a class="btn btn-danger"
                                                                href="/admin/unlistproduct?id=<%=product[i]._id%>">Unlist</a>
                                                            <% }else{ %>
                                                                <a class="btn btn-danger"
                                                                    href="/admin/listproduct?id=<%=product[i]._id%>">List</a>
                                                                <% } %>
                                                                    <a class="btn btn-success"
                                                                        href="/admin/Editproduct/<%=product[i]._id%>">Edit</a>

                                                    </td>
                                                    <td><span>
                                                            <%=product[i].description%>
                                                        </span></td>
                                                </tr>
                                                <% } } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
    <!--**********************************
            Content body end
        ***********************************-->


    <!--**********************************
            Footer start
        ***********************************-->
    <div class="footer">
        <div class="copyright">
            <p>Copyright Â© Designed &amp; Developed by <a href="#" target="_blank">Quixkit</a> 2019</p>
        </div>
    </div>

    <script src="./vendor/global/global.min.js"></script>
    <script src="./js/quixnav-init.js"></script>
    <script src="./js/custom.min.js"></script>




    </body>

    </html>