<style>
  .btn-info {
    background-color: #464d74;
    border-color: rgb(106, 122, 214);
    color: #ffffff;
  }

  .oval {
    border-radius: 100%;
    border: 1rem solid #fff;
  }

  .card-body {
    padding: 20px;
  }

  .btn-info:hover {
    color: #212529;
    background-color: rgb(89, 103, 176);
    border-color: rgb(57, 66, 115);
    color: #ffffff;
  }

  .card {
    margin-bottom: 20px;
  }
