    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('password-form').addEventListener('submit', function (event) {
                // Reset previous error messages
                document.getElementById('error-message').innerHTML = '';

                // Validate each field
            
                const currentPassword = document.getElementsByName('currentPassword')[0].value.trim();
                const newPassword = document.getElementsByName('newPassword')[0].value.trim();
                const confirmPassword = document.getElementsByName('confirmPassword')[0].value.trim();


                const passwordRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{6,}$/;
                // Validate current password
                if (!currentPassword) {
                    // Display error message if the current password field is empty
                    document.getElementById('error-message').innerHTML = 'Please enter your current password.';
                    event.preventDefault(); // Prevent form submission
                }
                if (!newPassword || !passwordRegex.test(newPassword)) {
                    // Display error message if the new password field is empty or invalid
                    document.getElementById('error-message').innerHTML = 'Please enter a valid new password.';
                    event.preventDefault(); // Prevent form submission
                }

                if (!confirmPassword || newPassword !== confirmPassword) {
                    // Display error message if the confirm password field is empty or does not match the new password
                    document.getElementById('error-message').innerHTML = 'Please enter a valid confirm password.';
                    event.preventDefault(); // Prevent form submission
                }

            });
        });
    </script>

