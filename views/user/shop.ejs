	<section class="ftco-section bg-light">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-lg-10 order-md-last">
					<div class="row">

						<% product.forEach(function(elem) { %>
							<div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">

								<div class="product">
								
									<a href="/shopdetail/<%= elem._id %>" class="img-prod"><img class="img-fluid"
											style="height: 225px; width: 220px;"
											src="/Admins/productImages/<%= elem.image[0] %>" alt="<%= elem.name %>">
										<div class="overlay"></div>
									</a>
                                       

									
									<div class="text py-3 pb-4 px-3">
										<div class="d-flex">
											<div class="cat">
												<span>
													<%= elem.category%>
												</span>
											</div>
										</div>
										

											<div class="d-flex">
												<div class="cat">
													<span>
														<h3><a href="/shopdetail/<%= elem._id %>">
															<%= elem.productname %>
															
														</a></h3>
													</span>
												</div>
											</div>

											<% if (user && user.cart.some(item => item.product.equals(elem._id))) { %>
												<a class="ion-ios-heart" href="/add-to-wishlist?product=<%= elem._id %>" class="wishlist-icon" style="color: #000000;  font-size: 20px">
											
												</a>
												<% } else { %>

													<a class="ion-ios-heart" href="/add-to-wishlist?product=<%= elem._id %>" class="wishlist-icon" style="color: #000000;  font-size: 20px">
											
													</a>
													<% } %>


											
											




										<div class="pricing">
											<p class="price"><span>
												<% if (elem.offer) { %>
													<div><del><%= elem.mrp %></del></div>
													<div><%= elem.price %></div>
													
												<% } else { %>
													<div><%= elem.price %></div>
												<% } %>
													
												</span>
											</p>
										</div>
										<p class="bottom-area d-flex px-3">
											<% if (user && user.cart.some(item => item.product.equals(elem._id))) { %>
												<a href="/cart" class="add-to-cart text-center py-2 mr-1"><span>Go to cart</span></a>
											<% } else { %>
												<a href="/addcart?product=<%=elem._id %>" class="add-to-cart text-center py-2 mr-1"><span>Add to cart <i
													class="ion-ios-add ml-1"></i></span></a>
											<% } %>
											<a href="#" class="buy-now text-center py-2">Buy now<span><i
														class="ion-ios-cart ml-1"></i></span></a>
										</p>
									</div>
								</div>
							</div>
							<% }); %>

					</div>
