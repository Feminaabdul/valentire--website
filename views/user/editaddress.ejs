	<script>
		document.addEventListener('DOMContentLoaded', function () {
			document.getElementById('address-form').addEventListener('submit', function (event) {
				// Reset previous error messages
				document.getElementById('error-message').innerText = '';

				// Validate each field
				const name = document.getElementsByName('name')[0].value.trim();
				const state = document.getElementsByName('state')[0].value.trim();
				const building = document.getElementsByName('building')[0].value.trim();
				const area = document.getElementsByName('area')[0].value.trim();
				const city = document.getElementsByName('city')[0].value.trim();
				const pincode = document.getElementsByName('pincode')[0].value.trim();

				if (!name || !state || !building || !area || !city || !pincode) {
					// Display error message if any field is empty
					document.getElementById('error-message').innerText = 'All fields are required.';
					event.preventDefault(); // Prevent form submission
				} else if (!name) {
                // Display error message if the name field is empty
                document.getElementById('error-message').innerText = 'Name is required.';
                event.preventDefault(); // Prevent form submission
            } else if (!state) {
                // Display error message if the state field is empty
                document.getElementById('error-message').innerText = 'State is required.';
                event.preventDefault(); // Prevent form submission
            }else if (!building) {
                // Display error message if the building field is empty
                document.getElementById('error-message').innerText = 'Building is required.';
                event.preventDefault(); // Prevent form submission
            } else if (!area) {
                // Display error message if the area field is empty
                document.getElementById('error-message').innerText = 'Area is required.';
                event.preventDefault(); // Prevent form submission
            } else if (!city) {
                // Display error message if the city field is empty
                document.getElementById('error-message').innerText = 'City is required.';
                event.preventDefault(); // Prevent form submission
            }else if (!pincode) {
                // Display error message if the pincode field is empty
                document.getElementById('error-message').innerText = 'Pincode is required.';
                event.preventDefault(); // Prevent form submission
            } else if (!/^\d{6}$/.test(pincode)) {
					// Display error message for invalid PIN code
					document.getElementById('error-message').innerText = 'Invalid PIN code. It should be 6 digits.';
					event.preventDefault(); // Prevent form submission
				}
			});
		});
	</script>

