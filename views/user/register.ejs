    <script>
        // Your validation code here
        const form = document.getElementById('register-form');
        const usernameInput = document.getElementById('nameinput');
        const emailInput = document.getElementById('emailinput');
        const phoneInput = document.getElementById('mobileinput');
        const passwordInput = document.getElementById('passwordinput');
        const confirmPasswordInput = document.getElementById('confirmpasswordinput');
        form.addEventListener('submit', (event) => {

            let hasErrors = false;

            // Clear previous error messages
            document.getElementById("common-error-display").innerHTML = "";
            document.getElementById("emailError").innerHTML = "";
            document.getElementById("phoneError").innerHTML = "";
            document.getElementById("passwordError").innerHTML = "";
            document.getElementById("confirmError").innerHTML = "";

            if (!usernameInput.value || !emailInput.value || !phoneInput.value || !passwordInput.value || !confirmPasswordInput.value) {
                hasErrors = true;
                document.getElementById("common-error-display").innerHTML = "Please fill in all fields.";
            } else {
                if (!emailInput.value.match(/^[A-Za-z\._\-0-9]*[@][A-Za-z]*[\.][a-z]{2,4}$/)) {
                    hasErrors = true;
                    document.getElementById('emailError').innerHTML = "Please enter a valid email.";
                }
                if (phoneInput.value.length !== 10) {
                    hasErrors = true;
                    document.getElementById("phoneError").innerHTML = "Please enter a valid phone number";
                }
                if (passwordInput.value.length < 6) {
                    hasErrors = true;
                    document.getElementById("passwordError").innerHTML = "Password must be at least 6 characters long.";
                } else {
                    const specialCharacters = /[!@#$%^&*()_+{}\[\]:;<>,.?~\\-]/;
                    if (!specialCharacters.test(passwordInput.value)) {
                        hasErrors = true;
                        document.getElementById("passwordError").innerHTML =
                            "Password must contain at least 1 special character.";
                    }
                    const capitalLetters = /[A-Z]/;
                    if (!capitalLetters.test(passwordInput.value)) {
                        hasErrors = true;
                        document.getElementById("passwordError").innerHTML =
                            "Password must contain at least 1 capital letter.";
                    }
                    const smallLetters = /[a-z]/;
                    if (!smallLetters.test(passwordInput.value)) {
                        hasErrors = true;
                        document.getElementById("passwordError").innerHTML =
                            "Password must contain at least 1 small letter.";
                    }
                }
                if (passwordInput.value !== confirmPasswordInput.value) {
                    hasErrors = true;
                    document.getElementById("confirmError").innerHTML = "Password and confirm password didn't match.";
                }
            }

            if (hasErrors) {
                event.preventDefault();
            }
        });


        const showPasswordIcon = document.getElementById('showPassword');
        const showPasswordIcon1 = document.getElementById('showPassword1');
        
        showPasswordIcon.addEventListener('click', function () {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                showPasswordIcon.classList.remove('fa-eye');
                showPasswordIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                showPasswordIcon.classList.remove('fa-eye-slash');
                showPasswordIcon.classList.add('fa-eye');
            }
        });

        showPasswordIcon1.addEventListener('click', function () {
            if (confirmPasswordInput.type === 'password') {
                confirmPasswordInput.type = 'text';
                showPasswordIcon1.classList.remove('fa-eye');
                showPasswordIcon1.classList.add('fa-eye-slash');
            } else {
                confirmPasswordInput.type = 'password';
                showPasswordIcon1.classList.remove('fa-eye-slash');
                showPasswordIcon1.classList.add('fa-eye');
            }
        });
    </script>


