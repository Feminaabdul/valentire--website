	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-10 ftco-animate">
					<form action="/placeorder/1" method="post" class="billing-form">

						<h3 class="mb-4 billing-heading">Billing Details</h3>
						<% if (Address) { %>
							<div class="row align-items-end">
								<div class="col-md-6">
									<div class="form-group">
										<label for="firstname"> Name</label>
										<input type="text" class="form-control" value="<%=Address.name %>"
											placeholder="">
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label for="state">state</label>
										<input type="text" class="form-control" value="<%=Address.state %>"
											placeholder="">
									</div>
								</div>
								<div class="w-100"></div>

								<div class="w-100"></div>
								<div class="col-md-6">
									<div class="form-group">
										<label for="streetaddress">building</label>
										<input type="text" class="form-control" value="<%=Address.building %>"
											placeholder="">
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label for="postcodezip">Area</label>
										<input type="text" class="form-control" value="<%=Address.area %>"
											placeholder="">
									</div>
								</div>


								<div class="w-100"></div>
								<div class="col-md-6">
									<div class="form-group">
										<label for="towncity">City</label>
										<input type="text" class="form-control" value="<%=Address.city %>"
											placeholder="">
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label for="postcodezip">Pincode</label>
										<input type="text" class="form-control" value="<%=Address.pincode %>"
											placeholder="">
									</div>
								</div>


							</div>
							<% } else { %>
								<p>No address is available. Please add an address before proceeding.</p>
								<% } %>

									<div class="col-md-6">
										<div class="cart-detail bg-light p-3 p-md-4">
											<h2 class="billing-heading mb-4">Select address</h2>
											<% if (Address) { %>
												
												<div class="form-group">
													<div class="col-md-12">
														<label>
															<input type="radio" name="address" value="default">
															<%= Address.name %>, <%= Address.state %>, <%=
																		Address.building %>,
																		<%= Address.pincode %>, <%= Address.city %>, <%=
																					Address.area %>
														</label>
													</div>
												</div>
											
												<% } else { %>
													<p>No address is added</p>
													
													<% } %>

													<% if (Address1 &&Address1.length> 0) { %>
														<% for (let i=0; i < Address1.length; i++) { %>
															<div class="form-group">
																<div class="col-md-12">
																	<label>
																		<input type="radio" name="address"
																			value="<%= 'address' + (i + 1) %>">
																		<%= Address1[i].name %>, <%= Address1[i].state
																				%>, <%= Address1[i].building %>, <%=
																						Address1[i].pincode %>, <%=
																							Address1[i].city %>, <%=
																								Address1[i].area %>
																	</label>
																</div>
															</div>
															<% } %>
																<% } else { %>
																	
																	<a href="/addaddress" class="btn btn-primary">Add Address</a>
																	<% } %>



										</div>
									</div>
									<div class="row mt-5 pt-3 d-flex">
										<div class="col-md-6 d-flex">
											<div class="cart-detail cart-total bg-light p-3 p-md-4">
												<h3 class="billing-heading mb-4">Cart Total</h3>
												<p class="d-flex">
													<span>Subtotal</span>
													<span>&#8377;<%= total %></span>
												</p>
												<p class="d-flex">
													<span>Delivery</span>
													<span>&#8377;10.00</span>
												</p>
												<p class="d-flex">
													<span>Discount</span>
													<span>&#8377;0.00</span>
												</p>
												<hr>
												<p class="d-flex total-price">
													<span>Total</span>
													<span>&#8377;<%= total+10 %><span>

												</p>
											</div>
										</div>
										<div class="col-md-6">
											<div class="cart-detail bg-light p-3 p-md-4">
												<h3 class="billing-heading mb-4">Payment Method</h3>

												<div class="form-group">
													<div class="col-md-12">
														<div class="radio">
															<label><input type="radio" name="paymentMethod" value="cod"
																	class="mr-2"> Cash On Delivery</label>
														</div>
													</div>
												</div>
												<div class="form-group">
													<div class="col-md-12">
														<div class="radio">
															<label><input type="radio" name="paymentMethod"
																	value="razorpay" class="mr-2"> Razorpay</label>
														</div>
													</div>
												</div>
												<div class="form-group">
													<div class="col-md-12">
														<div class="radio">
															<label><input type="radio" name="paymentMethod"
																	value="Wallet" class="mr-2"> Wallet</label>
														</div>
													</div>
												</div>



												<p><button type="submit" class="btn btn-primary py-3 px-4">Place an
														order</button>
												</p>
											</div>
											<div>
												<form action="" method="post">
													<div class="col-md-4">
														<div>
															<h4>coupon</h4>
															<input type="text" class="form-group py-3" name="coupon"
																id="coupon" placeholder="Paste Coupon Code">
														</div>
														<button type="submit" class="btn btn-primary btn-sm">Apply
															Coupon</button>
													</div>
												</form>
											</div>
										</div>
									</div>
					</form>
				</div> <!-- .col-md-8 -->
			</div>
		</div>
