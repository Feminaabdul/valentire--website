                        <table class="table">
                            <thead class="thead-primary">
                                <tr class="text-center">
                                    <th>image</th>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>remove</th>
                                </tr>
                            </thead>


                            <tbody>
                                <% if (cus.cart) { %>
                                    <% for (let i=0; i < cus.cart.length; i++) { %>
                                        <tr class="text-center">

                                            <td class="image-prod">
                                                <img class="image"
                                                    src="/Admins/productImages/<%= cus.cart[i].product.image %>"
                                                    alt="<%= cus.cart[i].product.productname %>" height="100px"
                                                    width="100px">
                                            </td>

                                            <td class="product-name">
                                                <h3>
                                                    <%= cus.cart[i].product.productname %>
                                                </h3>
                                                <p>
                                                    <%= cus.cart[i].product.description %>
                                                </p>
                                            </td>

                                            <td class="price">$<%= cus.cart[i].product.price %>
                                            </td>

                                            <td class="quantity">
                                                <div class="input-group mb-3">
                                                    <button class="btn btn-outline-primary p-2" type="button"
                                                        onclick="updateCartItem('<%= cus.cart[i].product._id %>', 'decrement')">&minus;</button>
                                                    <input type="text" name="quantity"
                                                        class="quantity form-control input-number mx-2"
                                                        value="<%= cus.cart[i].quantity %>"
                                                        id="quantityElement_<%= cus.cart[i].product._id %>" min="1"
                                                        max="100" readonly>
                                                    <button class="btn btn-outline-primary p-2" type="button"
                                                        onclick="updateCartItem('<%=cus.cart[i].product._id %>', 'increment')">&plus;</button>
                                                </div>
                                            </td>

                                            <td class="total">
                                                <span id="totalPrice_<%= cus.cart[i].product._id %>">
                                                    <%= (cus.cart[i].product.price * cus.cart[i].quantity).toFixed(2) %>
                                                </span>
                                            </td>
                                            <td class="product-remove">
                                                <a href="/remove-from-cart/<%= cus.cart[i].product._id %>"><span
                                                        class="ion-ios-close"></span></a>
                                            </td>

                                        </tr>
                                        <% } %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6">Cart is empty</td>
                                                </tr>
                                                <% } %>

                            </tbody>

                        </table>
                        <!-- Add this button with left alignment -->

